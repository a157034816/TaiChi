<Window x:Class="TaiChi.I18n.WpfExample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:i18n="clr-namespace:TaiChi.I18n.Wpf;assembly=TaiChi.I18n.Wpf"
        xmlns:local="clr-namespace:TaiChi.I18n.WpfExample"
        Title="{i18n:LocalizedBinding UI.WindowTitle}"
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 语言选择区域 -->
        <GroupBox Grid.Row="0" Header="{i18n:LocalizedBinding UI.LanguageSettings}" Margin="0,0,0,20">
            <StackPanel Orientation="Horizontal" Margin="10">
                <Label Content="{i18n:LocalizedBinding UI.LanguageLabel}" VerticalAlignment="Center" Width="100"/>
                <ComboBox x:Name="LanguageComboBox"
                         Width="200"
                         SelectionChanged="LanguageComboBox_SelectionChanged"/>
            </StackPanel>
        </GroupBox>

        <!-- 主要内容区域 -->
        <TabControl Grid.Row="1">

            <!-- 基本示例标签页 -->
            <TabItem Header="{i18n:LocalizedBinding UI.TabBasicExample}">
                <ScrollViewer>
                    <StackPanel Margin="20">

                        <!-- 欢迎信息 -->
                        <GroupBox Header="{i18n:LocalizedBinding UI.WelcomeSection}" Margin="0,0,0,20">
                            <StackPanel Margin="10">
                                <TextBlock Text="{i18n:LocalizedBinding Messages.WelcomeMessage}"
                                          FontSize="16"
                                          TextWrapping="Wrap"
                                          Margin="0,0,0,10"/>

                                <Button x:Name="ShowMessageButton"
                                       Content="{i18n:LocalizedBinding UI.ShowMessageButton}"
                                       Width="200"
                                       Height="30"
                                       Click="ShowMessageButton_Click"
                                       HorizontalAlignment="Left"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- 用户输入表单 -->
                        <GroupBox Header="{i18n:LocalizedBinding UI.UserFormSection}" Margin="0,0,0,20">
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Label Grid.Row="0" Grid.Column="0"
                                      Content="{i18n:LocalizedBinding UI.UserNameLabel}"
                                      VerticalAlignment="Center"/>
                                <TextBox x:Name="UserNameTextBox"
                                        Grid.Row="0" Grid.Column="1"
                                        Height="25"
                                        Margin="0,5"/>

                                <Label Grid.Row="1" Grid.Column="0"
                                      Content="{i18n:LocalizedBinding UI.EmailLabel}"
                                      VerticalAlignment="Center"/>
                                <TextBox x:Name="EmailTextBox"
                                        Grid.Row="1" Grid.Column="1"
                                        Height="25"
                                        Margin="0,5"/>

                                <StackPanel Grid.Row="2" Grid.Column="1"
                                           Orientation="Horizontal"
                                           Margin="0,10,0,5">
                                    <Button x:Name="ShowFormattedMessageButton"
                                           Content="{i18n:LocalizedBinding UI.ShowPersonalizedMessageButton}"
                                           Width="200"
                                           Height="30"
                                           Margin="0,0,10,0"
                                           Click="ShowFormattedMessageButton_Click"/>

                                    <Button x:Name="ValidateFormButton"
                                           Content="{i18n:LocalizedBinding UI.ValidateFormButton}"
                                           Width="120"
                                           Height="30"
                                           Click="ValidateFormButton_Click"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>

                        <!-- 图片示例 -->
                        <GroupBox Header="{i18n:LocalizedBinding UI.ImageExampleSection}">
                            <StackPanel Margin="10">
                                <TextBlock Text="{i18n:LocalizedBinding UI.ImageExampleDescription}"
                                          TextWrapping="Wrap"
                                          Margin="0,0,0,10"/>

                                <Image Source="{i18n:LocalizedImageBinding Key=Images.Logo}"
                                      Width="200"
                                      Height="100"
                                      Stretch="Uniform"
                                      HorizontalAlignment="Left"/>
                            </StackPanel>
                        </GroupBox>

                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- 工具示例标签页 -->
            <TabItem Header="{i18n:LocalizedBinding UI.TabToolsExample}">
                <StackPanel Margin="20">

                    <GroupBox Header="{i18n:LocalizedBinding UI.ResourceToolsSection}" Margin="0,0,0,20">
                        <StackPanel Margin="10">
                            <TextBlock Text="{i18n:LocalizedBinding UI.ResourceToolsDescription}"
                                      TextWrapping="Wrap"
                                      Margin="0,0,0,15"/>

                            <StackPanel Orientation="Horizontal">
                                <Button x:Name="GenerateResourcesButton"
                                       Content="{i18n:LocalizedBinding UI.GenerateResourcesButton}"
                                       Width="180"
                                       Height="35"
                                       Margin="0,0,15,0"
                                       Click="GenerateResourcesButton_Click"/>

                                <Button x:Name="ValidateResourcesButton"
                                       Content="{i18n:LocalizedBinding UI.ValidateResourcesButton}"
                                       Width="180"
                                       Height="35"
                                       Click="ValidateResourcesButton_Click"/>
                            </StackPanel>
                        </StackPanel>
                    </GroupBox>

                    <GroupBox Header="{i18n:LocalizedBinding UI.StatisticsSection}">
                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Label Grid.Row="0" Grid.Column="0" Content="{i18n:LocalizedBinding UI.CurrentLanguageLabel}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1"
                                       Text="{Binding Source={x:Static local:App.LocalizationService}, Path=CurrentCulture.DisplayName, Mode=OneWay}"
                                       VerticalAlignment="Center"/>

                            <Label Grid.Row="1" Grid.Column="0" Content="{i18n:LocalizedBinding UI.SupportedLanguagesLabel}"/>
                            <TextBlock Grid.Row="1" Grid.Column="1"
                                      Text="中文 (简体), English"
                                      VerticalAlignment="Center"/>

                            <Label Grid.Row="2" Grid.Column="0" Content="{i18n:LocalizedBinding UI.ResourceDirectoryLabel}"/>
                            <TextBlock Grid.Row="2" Grid.Column="1"
                                      Text="Resources"
                                      VerticalAlignment="Center"/>

                            <Label Grid.Row="3" Grid.Column="0" Content="{i18n:LocalizedBinding UI.CachingEnabledLabel}"/>
                            <TextBlock Grid.Row="3" Grid.Column="1"
                                      Text="{i18n:LocalizedBinding General.Yes}"
                                      VerticalAlignment="Center"/>
                        </Grid>
                    </GroupBox>

                </StackPanel>
            </TabItem>

        </TabControl>

        <!-- 状态栏 -->
        <StatusBar Grid.Row="2" Height="25">
            <StatusBarItem>
                <TextBlock Text="{i18n:LocalizedBinding UI.ReadyStatus}"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock>
                    <Run Text="{i18n:LocalizedBinding UI.LanguageLabel}"/>
                    <Run Text=": "/>
                    <Run Text="{Binding Source={x:Static local:App.LocalizationService}, Path=CurrentCulture.DisplayName, Mode=OneWay}"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>

    </Grid>
</Window>
