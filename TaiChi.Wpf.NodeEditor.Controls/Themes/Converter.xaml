<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:TaiChi.Wpf.NodeEditor.Controls.Converters">
    
    <!-- 杞崲鍣ㄨ祫婧?-->
    <converters:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter" />
    <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    <converters:StringToVisibilityConverter x:Key="StringToVisibilityConverter" />
    <converters:SizeToWidthConverter x:Key="SizeToWidthConverter" />
    <converters:SizeToHeightConverter x:Key="SizeToHeightConverter" />
    <converters:PointToXConverter x:Key="PointToXConverter" />
    <converters:PointToYConverter x:Key="PointToYConverter" />
    <converters:ConnectionTypeToPathConverter x:Key="ConnectionTypeToPathConverter" />
    <converters:NodeStateToColorConverter x:Key="NodeStateToColorConverter" />
    <converters:ZoomToFontSizeConverter x:Key="ZoomToFontSizeConverter" />
    <converters:CountToVisibilityConverter x:Key="CountToVisibilityConverter" />
    <converters:MultiBooleanToVisibilityConverter x:Key="MultiBooleanToVisibilityConverter" />
    <converters:RectToPathConverter x:Key="RectToPathConverter" />
    <converters:ClampValueConverter x:Key="ClampValueConverter" />
    <converters:FlowPinFilterConverter x:Key="FlowPinFilterConverter" />
    <converters:PercentageConverter x:Key="PercentageConverter" />
    <converters:DataTypeToBrushConverter x:Key="DataTypeToBrushConverter" />
    <converters:PinInputValueVisibilityConverter x:Key="PinInputValueVisibilityConverter" />
    
    <!-- 对象是否为 null → Visibility 显示控制 -->
    <!-- 非空 => Visible；空 => Collapsed -->
    <converters:ObjectToVisibilityConverter x:Key="ObjectToVisibility_VisibleWhenNotNull" />
    <!-- 取反：空 => Visible；非空 => Collapsed -->
    <converters:ObjectToVisibilityConverter x:Key="ObjectToVisibility_VisibleWhenNull" Invert="True" />
</ResourceDictionary>

